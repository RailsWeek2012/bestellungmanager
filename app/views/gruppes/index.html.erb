<h1>Liste der Bestellungsgruppe</h1>

<table class="table table-striped tablebordered table-condensed  ">
  <thead>
  </thead>
  <tbody>
  <tr>
    <th>Title</th>
    <th>Termin</th>
  </tr>

<% @gruppes.each do |gruppe| %>
  <tr>

    <td><%= gruppe.title %></td>
    <td><%= gruppe.termin %></td>
    <td><%= link_to 'Show', gruppe , :class => "btn btn-mini btn-info"%></td>
    <% if can? :edit, gruppe %>
    <td><%= link_to 'Edit', edit_gruppe_path(gruppe), :class => "btn btn-mini" %></td>
    <td><%= link_to 'Destroy', gruppe, method: :delete, data: { confirm: 'Are you sure?' },
                    :class => "btn btn-mini btn-danger" %></td>
        <%end%>
  </tr>
<% end %>
</table>
<%= link_to "zur Speisekarte",current_artikel, :class => "btn btn-small" %> |
<td><%= link_to 'Neue Bestellunggruppe', new_gruppe_path, :class => "btn btn-small btn-primary" %></td>




