<h1>Liste der bestellungs</h1>

<table class="table table-striped tablebordered table-condensed  ">
  <thead>
  </thead>
  <tbody>
  <tr>
    <th>Title</th>
    <th>Termin</th>
  </tr>

<% @bestellungs.each do |bestellung| %>
  <tr>

    <td><%= bestellung.title %></td>
    <td><%= bestellung.termin %></td>
    <td><%= link_to 'Show', bestellung , :class => "btn btn-mini btn-info"%></td>
    <% if can? :edit, bestellung %>
    <td><%= link_to 'Edit', edit_bestellung_path(bestellung), :class => "btn btn-mini" %></td>
    <td><%= link_to 'Destroy', bestellung, method: :delete, data: { confirm: 'Are you sure?' },
                    :class => "btn btn-mini btn-danger" %></td>
        <%end%>
  </tr>
<% end %>
</table>
<%= link_to "Zurueck zur Artikel",current_artikel, :class => "btn btn-small" %> |
<td><%= link_to 'Neue Bestellung', new_bestellung_path, :class => "btn btn-small btn-primary" %></td>




