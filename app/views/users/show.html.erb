<div>
  <h1>Liste meiner Bestellungsgruppen</h1>

  <table class="table table-striped tablebordered table-condensed  ">
    <thead>
    </thead>
    <tbody>
    <tr>
      <th>Title</th>
      <th>Termin</th>
    </tr>

    <% @user.bestellungs.each do |bestellung| %>
        <tr>

          <td><%= bestellung.title %></td>
          <td><%= bestellung.termin %></td>
          <td><%= link_to 'Show', bestellung , :class => "btn btn-mini btn-info"%></td>
          <% if can? :edit, bestellung %>
              <td><%= link_to 'Edit', edit_bestellung_path(bestellung), :class => "btn btn-mini" %></td>
              <td><%= link_to 'Destroy', bestellung, method: :delete, data: { confirm: 'Are you sure?' },
                              :class => "btn btn-mini btn-danger" %></td>
          <%end%>
        </tr>
    <% end %>
    </table>
</div>
<hr>
<div>
  <h1>Liste meiner Auftragen</h1>

  <table class="table table-striped tablebordered table-condensed ">
    <tr>
      <th>Name</th>
      <th>Speise</th>
      <th>Preis</th>
      <th>Comment</th>
    </tr>

    <% @user.auftrags.each do |auftrag| %>
        <tr>
          <td><%= auftrag.name %></td>
          <td><%= auftrag.speise %></td>
          <td><%= auftrag.preis %></td>
          <td><%= auftrag.comment %></td>
          <td><%= link_to 'Show', auftrag, :class => "btn btn-mini btn-primary" %></td>
          <% if can? :edit, auftrag %>
              <td><%= link_to 'Edit', edit_auftrag_path(auftrag), :class => "btn btn-mini " %></td>
              <td><%= link_to 'Destroy', auftrag, method: :delete, data: { confirm: 'Are you sure?' },
                              :class => "btn btn-mini btn-danger" %></td>
          <% end %>
        </tr>
    <% end %>
  </table>
</div>